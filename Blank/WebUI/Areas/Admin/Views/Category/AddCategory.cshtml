@model Entities.Concrete.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading mb-2">
    <div class="col-lg-10">
        <h2>Add a New Category</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Admin/Index">Admin</a>
            </li>
            <li class="breadcrumb-item">
                <a>Category</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>AddCategory</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>All form elements <small>With custom checbox and radion elements.</small></h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#" class="dropdown-item">Config option 1</a>
                        </li>
                        <li>
                            <a href="#" class="dropdown-item">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
                {
                    <div class="form-group row">
                        @Html.Label("Category Name", null, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.CategoryName)
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group  row">
                        @Html.Label("Category Description", null, new { @class = "col-sm-2 col-form-label" })
                        <div class="col-sm-10">
                            @Html.TextAreaFor(x => x.CategoryDescription, 15, 3, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.CategoryDescription)
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="hr-line-dashed"></div>

                    <button type="submit" class="btn btn-w-m btn-info mt-2 mb-2">Save Datas</button>

                }
            </div>
        </div>
    </div>
</div>


@section scripts {
}