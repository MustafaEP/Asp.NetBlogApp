@model RegisterViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!-- SweetAlert JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Writer Register Page</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">

                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Name and Last Name</label>
                            
                            @Html.TextBoxFor(x => x.Writer.WriterName, new { @class = "form-control", @id = "validationDefault01", placeholder = "" })
                            @Html.ValidationMessageFor(x => x.Writer.WriterName,"" , new { @class = "text-danger" })
                            
                           
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-Mail</label>
                            @Html.TextBoxFor(x => x.Writer.WriterEMail, new { @class = "form-control", @id = "validationDefault02", type = "email", placeholder = "" })
                            @Html.ValidationMessageFor(x => x.Writer.WriterEMail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="password1" class="mb-2">Password</label>
                            @Html.PasswordFor(x => x.Writer.WriterPassword, new { @class = "form-control", @id = "password1", placeholder = "" })
                            @Html.ValidationMessageFor(x => x.Writer.WriterPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="password2" class="mb-2">Confirm Password</label>
                            @Html.Password("ConfirmPassword", null, new { @class = "form-control", @id = "password2", placeholder = "" })
                            @Html.ValidationMessage("ConfirmPassword", "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="imagePath" class="mb-2">Image Path</label>
                            @Html.TextBoxFor(x => x.Writer.WriterImage, new { @class = "form-control", @id = "imagePath", placeholder = "" })
                            @Html.ValidationMessageFor(x => x.Writer.WriterImage, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="cities">Select a city:</label>

                            <select id="cities" name="SelectedCity" class="form-control">
                                <option value="" disabled selected>Select a city</option>
                                @foreach (var item in Model.Cities)
                                {
                                    <option value="@item.CityName">@item.CityName</option>
                                }
                            </select>

                        </div>
                    </div>

                    <!-- Modal Footer -->
                    <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                    <p>
                        <a href="#" onclick="confirmAction()">By clicking Signup, I agree to your terms</a>
                    </p>
                }
            </div>
        </div>
    </div>
    <br />
</section>
<!--//main-->

<script>
    function confirmAction() {
        swal({
            title: "Trust us",
            text: "We will hide your infos in safely our databeses",
            icon: "info",
            button: "Aww yiss!",
        });
    }
</script>
