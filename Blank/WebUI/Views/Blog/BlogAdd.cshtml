@model Entities.Concrete.Blog
@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h2>Enter a New Blog</h2>
<br />

@using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post))
{
    @Html.Label("Blog Title")
    @Html.TextBoxFor(x => x.BlogTittle, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogTittle)

    <br />
    @Html.Label("Blog Image")
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogImage)

    <br />
    @Html.Label("Blog Mini Image")
    @Html.TextBoxFor(x => x.BlogThumbneilImage, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogThumbneilImage)
    
    <br />
    @Html.Label("Category")
    @Html.DropDownList("CategoryId", (IEnumerable<SelectListItem>)ViewBag.CategoryValue, new { @class = "form-control" })
    

    <br />
    @Html.Label("Blog Content")
    @Html.TextAreaFor(x => x.BlogContent, 10, 3, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogContent)

    <br />

    <button class="btn btn-info">Submit Blog</button>

}

