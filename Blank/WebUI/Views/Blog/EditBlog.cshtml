@model Entities.Concrete.Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h2>Edit Blog Page</h2>

@using(Html.BeginForm("EditBlog", "Blog", FormMethod.Post))
{
    @Html.Label("Blog ID")
    @Html.TextBoxFor(x => x.BlogId, new {@class = "form-control"})
    <br />
    @Html.Label("Blog Title")
    @Html.TextBoxFor(x => x.BlogTittle, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Thumbneil Url")
    @Html.TextBoxFor(x => x.BlogThumbneilImage, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Image")
    @Html.TextBoxFor(x => x.BlogImage, new {@class = "form-control"})
    <br />
    @Html.Label("Blog Category")
    @Html.DropDownList("CategoryId", (IEnumerable<SelectListItem>)ViewBag.CategoryValue, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Content")
    @Html.TextAreaFor(x => x.BlogContent, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Update</button>
}

